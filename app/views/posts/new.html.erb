<h1>Create a post</h1>

<%= form_for :posts do |form| %>
<p>
<%= form.label :title %>
<%= form.text_field :title %>
</p>
<p> 
<%= form.label :description %>
<%= form.text_field :description %>
</p>
<p> 
<%= form.label :image %>
<%= form.file_field :image %>
</p>

<%= form.submit 'Post it!' %>
<% end %>